TARGETNAME=kd
TARGETTYPE=DYNLINK
DLLENTRY=KdDLLEntry
TARGETLIBS=$(_COMMONOAKROOT)\lib\$(_CPUINDPATH)\fulllibc.lib

WINCEOEM=1
WINCEPROJ=COMMON

!IF "$(_TGTCPUFAMILY)"=="SH"
CDEFINES=-DSPEED_HACK
INCLUDES=shx
!ENDIF

!IF "$(_TGTCPUFAMILY)"=="x86"
CDEFINES=-DSPEED_HACK
INCLUDES=x86
!ENDIF

!IF "$(_TGTCPUFAMILY)"=="MIPS"
INCLUDES=mips
!ENDIF

!IF "$(_TGTCPUFAMILY)"=="ARM"
CDEFINES=-DSPEED_HACK
INCLUDES=arm
!ENDIF

!IFDEF DBGOTHER
CDEFINES=$(CDEFINES) -DDBGOTHER
!ENDIF

# Machine independent defines
AFPUDEFINES=-DMIPS_HAS_FPU $(AFPUDEFINES)
CFPUDEFINES=-DMIPS_HAS_FPU $(CFPUDEFINES)

CDEFINES=$(CDEFINES) -DBUILDING_DEBUGGER -DWINCEMACRO
INCLUDES=$(INCLUDES);..\inc;..\kernel\sh

LDEFINES=-subsystem:native /DEBUG /DEBUGTYPE:BOTH,FIXUP

# Contrary to popular belief, THIS AFFECTS ARM AS WELL
NOMIPS16CODE=1
NOLIBC=1

SOURCES=           \
   dbg.c           \
   kdapi.c         \
   kdbreak.c       \
   kdctrl.c        \
   kddata.c        \
   kdinit.c        \
   kdmove.c        \
   kdpacket.c      \
   kdtrap.c        \
   odebug.c 

SH_SOURCES=        \
   sh\kdkernel.c   \
   sh\kdasm.src

MIPS_SOURCES=      \
   mips\kdkernel.c \
   mips\kdasm.s

x86_SOURCES=	   \
   x86\kdkernel.c  \
   x86\dbgasync.c

ARM_SOURCES=       \
   arm\kdkernel.c  \
   arm\kdasm.s

