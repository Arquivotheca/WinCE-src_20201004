<!-- ===============================================
====
==== WiFiMetrics test configuraton file
====
==== Default AP and Attenuator Configuration File.
====
==== =========================================== -->

<APPool>

    <!--
        Configurable Access Point #1:

        This AP may be configured at will. Its only pre-defined
        use is as the "home" AP in WiFi roaming scenarios.
    -->
    <APController name="$(ConfigAP1Name)">

        <RFAttenuatorState> <Current> 0 </Current> </RFAttenuatorState>

        <AccessPointState>

            <Ssid> $(ConfigAP1SSID) </Ssid>
            <RadioState> on </RadioState>
            <SsidBroadcast> on </SsidBroadcast>

            <Authentication> Open </Authentication>
            <Cipher> WEP </Cipher>
            <WEPKeys activeKey="1"> <WEPKey index="1"> 01.23.45.67.89 </WEPKey> </WEPKeys>

            <RadiusServer> $(EnrollHostName) </RadiusServer>
            <RadiusPort>   $(EnrollHostPort) </RadiusPort>
            <RadiusSecret> $(EnrollPassword) </RadiusSecret>

        </AccessPointState>

    </APController>

    <!--
        Configurable Access Point #2:

        This AP may be configured at will. Its only pre-defined
        use is as the "hotspot" AP in WiFi roaming scenarios.
    -->
    <APController name="$(ConfigAP2Name)">

        <RFAttenuatorState> <Current> 0 </Current> </RFAttenuatorState>

        <AccessPointState>

            <Ssid> $(ConfigAP2SSID) </Ssid>
            <RadioState> on </RadioState>
            <SsidBroadcast> on </SsidBroadcast>

            <Authentication> Open </Authentication>
            <Cipher> ClearText </Cipher>

            <RadiusServer> $(EnrollHostName) </RadiusServer>
            <RadiusPort>   $(EnrollHostPort) </RadiusPort>
            <RadiusSecret> $(EnrollPassword) </RadiusSecret>

        </AccessPointState>

    </APController>

    <!--
        Configurable Access Point #3:

        This AP may be configured at will. Its only pre-defined
        use is as "office AP #1" in WiFi roaming scenarios.
    -->
    <APController name="$(ConfigAP3Name)">

        <RFAttenuatorState> <Current> 0 </Current> </RFAttenuatorState>

        <AccessPointState>

            <Ssid> $(ConfigAP3SSID) </Ssid>
            <RadioState> on </RadioState>
            <SsidBroadcast> on </SsidBroadcast>

            <Authentication> WPA-PSK </Authentication>
            <Cipher> TKIP </Cipher>
            <Passphrase> 0123456789 </Passphrase>

            <RadiusServer> $(EnrollHostName) </RadiusServer>
            <RadiusPort>   $(EnrollHostPort) </RadiusPort>
            <RadiusSecret> $(EnrollPassword) </RadiusSecret>

        </AccessPointState>

    </APController>

    <!--
        Configurable Access Point #4:

        This AP may be configured at will. Its only pre-defined
        use is as "office AP #2" in WiFi roaming scenarios.
    -->
    <APController name="$(ConfigAP4Name)">

        <RFAttenuatorState> <Current> 0 </Current> </RFAttenuatorState>

        <AccessPointState>

            <Ssid> $(ConfigAP4SSID) </Ssid>
            <RadioState> on </RadioState>
            <SsidBroadcast> on </SsidBroadcast>

            <Authentication> WPA-PSK </Authentication>
            <Cipher> TKIP </Cipher>
            <Passphrase> 0123456789 </Passphrase>

            <RadiusServer> $(EnrollHostName) </RadiusServer>
            <RadiusPort>   $(EnrollHostPort) </RadiusPort>
            <RadiusSecret> $(EnrollPassword) </RadiusSecret>

        </AccessPointState>

    </APController>

</APPool>
